        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".AddNoteActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" >
