<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:gravity="center"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
         <Button 
             style="@style/monthbtn"
             android:id="@+id/center_month_btn"
             android:layout_centerHorizontal="true"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
         />
         <Button 
             style="@style/monthbtn"
             android:id="@+id/previous_month_btn"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_toLeftOf="@id/center_month_btn"
             android:text="上月"/>
         <Button
             style="@style/monthbtn"
             android:id="@+id/next_month_btn" 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_toRightOf="@id/center_month_btn"
             android:text="下月"/>
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:background="#96ffffff">
        <TextView 
            style="@style/dayofweek"
            android:layout_width="fill_parent"   
            android:layout_height="wrap_content"   
            android:layout_weight="1"
            android:text="日"/>
        <TextView 
            style="@style/dayofweek"
            android:layout_width="fill_parent"   
            android:layout_height="wrap_content"   
            android:layout_weight="1"
            android:text="一"/>
        <TextView 
            style="@style/dayofweek"
            android:layout_width="fill_parent"   
            android:layout_height="wrap_content"   
            android:layout_weight="1"
            android:text="二"/>
        <TextView 
            style="@style/dayofweek"
            android:layout_width="fill_parent"   
            android:layout_height="wrap_content" 
            android:layout_weight="1"  
            android:text="三"/>
        <TextView 
            style="@style/dayofweek"
            android:layout_width="fill_parent"   
            android:layout_height="wrap_content"  
            android:layout_weight="1" 
            android:text="四"/>
        <TextView 
            style="@style/dayofweek"
            android:layout_width="fill_parent"   
            android:layout_height="wrap_content"   
            android:layout_weight="1"
            android:text="五"/>
        <TextView 
            style="@style/dayofweek"
            android:layout_width="fill_parent"   
            android:layout_height="wrap_content"   
            android:layout_weight="1"
            android:text="六"/>
        
    </LinearLayout>
    
    <GridView   
        android:gravity="center"
        android:id="@+id/calendar_view"
        android:background="#FFFFFF"
        android:padding="1.0dip"
        android:scrollbars="none"
        android:fadingEdge="none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:horizontalSpacing="1.0dip"
        android:verticalSpacing="1.0dip"
        android:numColumns="7" 
        />
    

</LinearLayout>
