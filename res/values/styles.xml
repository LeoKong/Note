<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light" />
    
    <!-- 标题栏中间主文字 -->
    <style name="title_style">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="common_edit_style">
        <item name="android:background">@drawable/public_edit_selector</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <!-- 标题栏两边按钮-->
    <style name="title_btn_word">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">15sp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    
    <!-- 侧栏中radiobtn -->
    <style name="radio_item_style">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/radio_tv_selector</item>
        <item name="android:background">@drawable/radiobtn_selector</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">17sp</item>
        <item name="android:padding">10dp</item>
        
    </style>
    
    <!-- 侧栏中button -->
    <style name="sidebar_btn_style">
         <item name="android:background">@drawable/radiobtn_selector</item>
         <item name="android:textColor">@drawable/radio_tv_selector</item>
         <item name="android:textSize">19sp</item>
         <item name="android:padding">10dp</item>
        
    </style>
    
    <!-- 密码设置界面的文字 -->
    <style name="passwdsetting_textview_style">
        <item name="android:textColor">@color/dark_grey</item>
         <item name="android:textSize">17sp</item>
    </style>
    
    <!-- 显示图片动画 -->
    <style name="AnimPopUp" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
    
    <!-- 画板底部按钮 -->
    <style name="paint_bottom_bar_button">
        <item name="android:background">@drawable/textnote_title_bg_1</item>
        <item name="android:layout_width">10.0dip</item>
        <item name="android:layout_height">36.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    
    <!-- 日历上的星期名 -->
    <style name="dayofweek">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>
    
    <!-- 切换日历月份的按钮 -->
    <style name="monthbtn">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <!-- 闹钟提示 -->
    <style name="AlarmDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item> 
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    

</resources>